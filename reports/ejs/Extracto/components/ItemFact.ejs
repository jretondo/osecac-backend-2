<% if(parseInt(tipo)===3){ %>
  <tr>
    <td style="width: 10%;text-align: center;background-color: #eaeaea;">
      <%- fecha %>
    </td>
    <td style="width: 15%;text-align: center;background-color: #eaeaea">
      <%- comprobante %>
    </td>
    <td style="width: 40%;text-align: left;font-size: 10px;background-color: #eaeaea">
      <% if(descripcion2==="" ){ %>
        <%- descripcion %>
          <% }else{ %>
            Cr. Transf. <%- descripcion2 %>
              <% }%>
    </td>
    <td style="width: 15%;text-align: right;background-color: #eaeaea">$ <%- monto %>
    </td>
    <td style="width: 20%;text-align: right;background-color: #eaeaea">$ <%- saldo %>
    </td>
  </tr>
  <% }else if(parseInt(tipo)===5){ %>
    <tr>
      <td style="width: 10%;text-align: center;">
        <%- fecha %>
      </td>
      <td style="width: 15%;text-align: center;">
        <%- comprobante %>
      </td>
      <td style="width: 40%;text-align: left;font-size: 10px;">
        <% if(descripcion2==="" ){ %>
          <%- descripcion %>
            <% }else{ %>
              Pago de Servicio <%- descripcion2 %>
                <% }%>
      </td>
      <td style="width: 15%;text-align: right;">$ <%- monto %>
      </td>
      <td style="width: 20%;text-align: right;">$ <%- saldo %>
      </td>
    </tr>
    <% }else{ %>
      <tr>
        <td style="width: 10%;text-align: center;">
          <%- fecha %>
        </td>
        <td style="width: 15%;text-align: center;">
          <%- comprobante %>
        </td>
        <td style="width: 40%;text-align: left;font-size: 10px;">
          <%- descripcion %>
        </td>
        <td style="width: 15%;text-align: right;">$ <%- monto %>
        </td>
        <td style="width: 20%;text-align: right;">$ <%- saldo %>
        </td>
      </tr>
      <% }%>